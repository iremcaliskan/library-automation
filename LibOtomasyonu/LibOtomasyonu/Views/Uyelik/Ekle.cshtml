
@{
    ViewBag.Title = "Üyelik Ekle";
}
@using LibOtomasyonu.Data.Model
@model List<Uye>

<h2>ÜYELİK EKLE</h2>

<form class="form-horizontal">

    <div class="form-group">
        <label class="col-md-12">Ad Soyad</label>
        <div class="col-md-12">
            <select id="uyeId">
                @foreach (var uye in Model)
                {
                    <option value="@uye.Id">
                        @uye.Ad @uye.Soyad
                    </option>
                }
            </select>
        </div>
    </div>

    <div class="form-group">
        <label class="col-md-12">Mail</label>
        <div class="col-md-12">
            <input type="text" id="mail" class="form-control" placeholder="Mail giriniz.">
        </div>
    </div>

    <div class="form-group">
        <label class="col-md-12">Şifre</label>
        <div class="col-md-12">
            <input type="password" id="parola" class="form-control" placeholder="Şifre giriniz.">
        </div>
    </div>

    <div class="form-group">
        <label class="col-md-12">Şifre(Tekrar)</label>
        <div class="col-md-12">
            <input type="password" id="parolaTekrar" class="form-control" placeholder="Şifreyi tekrar giriniz.">
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-12">
            <input type="button" id="uyelikEkle" class="btn btn-block btn-info" value="Kaydet" />
        </div>
    </div>
</form>


